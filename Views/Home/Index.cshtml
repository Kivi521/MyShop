@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-9">
        <div class="product-info">
            <img src="~/imageOfMyShope/F-001.jpeg" />
            <h3>Bookcase</h3>
            <ul class="products-props">
                <li>Price: $999.9</li>
                <li>Description: this is a very good bookcase</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy</button>
        </div>

        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox" />
                    <label>Remember me?</label>
                </div>
                <div>
                    <input type="submit" value="Login" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <p>This is a fun site to do some buying of my shope.</p>
    </div>
</div>